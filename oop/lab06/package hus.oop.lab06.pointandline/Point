package hus.oop.lab06.pointandline;

public class Point {
    // private variables
    private int x;     // x co-ordinate
    private int y;      // y co-ordinate

    public int getX() {
        return x;
    }

    public void setX(int x) {
        this.x = x;
    }

    public int getY() {
        return y;
    }

    public void setY(int y) {
        this.y = y;
    }

    // constructor
    public Point(int x, int y) {
        this.x = x;
        this.y = y;
    }

    public String toString() {
        return "Point: (" + x
                + ", " + y + ")";
    }

    public void setXY(int x, int y) {
        this.x = x;
        this.y = y;
    }
}
