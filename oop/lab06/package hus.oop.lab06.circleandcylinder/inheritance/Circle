package hus.oop.lab06.circleandcylinder.inheritance;

public class Circle {
    private double radius; // should not initialize the value of this variance here
    private String color;

    // 1st-constructor (default constructor) with no argument
    public Circle(){
        this.radius = 1.0;   // should initialize the value of new obj here
        this.color = "red";
    }
    // 2nd-constructor with 1 arg
    public Circle(double radius){
        this.radius = radius;  // the left is member-data and the right is the value of passed parameter
        this.color = "red";
    }

    public String getColor() {
        return color;
    }

    public void setColor(String color) {
        this.color = color;
    }

    public void setRadius(double radius){
        this.radius = radius;
    }
    public double getRadius(){
        return radius;
    }

    public double getArea(){
        return radius * radius * Math.PI;
    }

}
