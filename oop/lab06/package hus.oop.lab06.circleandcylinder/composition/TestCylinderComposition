package hus.oop.lab06.circleandcylinder.composition;

import hus.oop.lab06.circleandcylinder.composition.Cylinder;

public class TestCylinderComposition {
    public static void main(String[] args) {
        // Declare and allocate a new instance of cylinder
        //  with default color. radius, and height
        hus.oop.lab06.circleandcylinder.composition.Cylinder cylinder1 = new hus.oop.lab06.circleandcylinder.composition.Cylinder();
        cylinder1.setColor("blue");
        System.out.println(cylinder1);
        System.out.println("Cylinder: "
                + " radius=" + cylinder1.getRadius()
                + " height=" + cylinder1.getHeight()
                + " base area=" + cylinder1.getArea()
                + " volume=" + cylinder1.getVolume());

        // Declare and allocate a new instance of cylinder
        //  specifying height, with default color and radius
        hus.oop.lab06.circleandcylinder.composition.Cylinder cylinder2 = new hus.oop.lab06.circleandcylinder.composition.Cylinder();
        System.out.println("Cylinder: "
                + " radius=" + cylinder2.getRadius()
                + " height=" + cylinder2.getHeight()
                + " base area=" + cylinder2.getArea()
                + " volume=" + cylinder2.getVolume());

        // Declare and allocate a new instance of cylinder
        //  specifying radius and height, with default color
        hus.oop.lab06.circleandcylinder.composition.Cylinder cylinder3 = new Cylinder();
        System.out.println("Cylinder: "
                + " radius=" + cylinder3.getRadius()
                + " height=" + cylinder3.getHeight()
                + " base area=" + cylinder3.getArea()
                + " volume=" + cylinder3.getVolume());
    }
}
